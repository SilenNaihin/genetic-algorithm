{
  "permissions": {
    "allow": [
      "Bash(npm *)",
      "Bash(git status*)",
      "Bash(git diff*)",
      "Bash(git log*)",
      "Bash(git add*)",
      "Bash(git commit*)",
      "Read(*)",
      "Write(src/**)",
      "Write(docs/**)",
      "Edit(src/**)",
      "Edit(docs/**)"
    ],
    "deny": [
      "Bash(rm -rf*)",
      "Bash(git reset --hard*)",
      "Bash(git push --force*)",
      "Write(.env)"
    ]
  }
}
